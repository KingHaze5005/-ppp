<%
  partners = partners.sort((a, b) => { return a.pos - b.pos; });
%>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Partners - <%= sitesettings.sitename %></title>
        <meta property="og:title" content="Partners - <%= sitesettings.sitename %>" />
        <link rel="icon" href="/assets/logo.png">
        <meta property="og:image" content="/assets/logo.png">
        <meta name="theme-color" content="<%= sitesettings.sitecolor %>">
        <meta name="description" content="<%= sitesettings.sitedesc %>" />
        <meta property="og:type" content="website" />
        <meta property="og:description" content="<%= sitesettings.sitedesc %>" />
    </head>
    <body>
        <%- include('_header') %>
        <div class="container p-4 text-start">
            <h1 class="bigfont">Our Partners</h1>
            <hr>
        </div>
        <div class="container p-4">
          <div class="row justify-content-start">
            <% partners.forEach(function(partner) { %>
              <div class="col-lg-4">
                <div class="mb-3 ms-2 me-2 bg-thatdark p-4 bd-theme">
                  <img src="/images/partner_<%= partner.uniqueid %>.png" class="partnerpagelogo mb-3" alt="partner picture">
                  <h3 class="text-theme" style="font-weight: 700;"><%= partner.title %></h3>
                  <hr>
                  <p class="mb-3"><%= partner.content %></p>
                  <a href="<%= partner.link %>" target="_blank" class="btn btn-theme"><i class="fa-solid fa-link"></i> <%= partner.title %></a>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
        <br>
        <%- include('_footer') %>
    </body>
</html>
